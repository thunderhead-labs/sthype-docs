{
    "compilerOptions": {
      "target": "es2020",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "ts-node": {
      // these options are overrides used only by ts-node
      // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
      "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true
      },
      "type": "module"
    },
    "jsx": "react",
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      ".next/types/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  